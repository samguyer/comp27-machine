# Store an 8-bit integer at @300
# Store a 16-bit integer at @302
start:
    puts "Enter two 8-bit values: "
    getb @300
    getb @301

    puts "As 16-bit integer: "
    putw @300

    puts "Enter a 16-bit integer: "
    getw @302

    puts "First byte: "
    putb @302

    puts "Second byte: "
    putb @303

    exit
